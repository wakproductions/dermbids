!!! 5
%html
  %head
    %meta{ :charset => "utf-8" }
    %meta{ 'http-equiv' => "X-UA-Compatible", :content => "IE=Edge,chrome=1" }
    %meta{ :name => "viewport", :content => "width=device-width", 'initial-scale' => "1.0" }
    %title= content_for?(:title) ? yield(:title) : 'Dermbids: Tattoo Removal and More | Costs by Taking a Picture'
    = csrf_meta_tags

    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"

  %body
    #wrap
      %nav.navbar.navbar-default.navbar-fixed-top.navbar-admin{role: 'navigation'}
        .navbar-header
          =link_to 'Dermbids Administration', admin_root_path, class: 'navbar-brand'
        -if user_signed_in?
          %ul.nav.navbar-nav.navbar-right
            %li= link_to 'Sign Out', destroy_user_session_path, method: :delete
      .container
        -flash.each do |name, msg|
          .alert.alert-warning.alert-dismissable
            =msg
            %button.close{ :type=>'button', :'data-dismiss'=>'alert', :'aria-hidden'=>true }!&times;
        = yield
    #footer
      .container
        %p.text-muted.credit Â© Copyright 2013 Dermbids Inc. All rights reserved.